<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= avatar_for @user %>
      <ul>
        <li>
          Fullname: <%= @user.name %>
        </li>
        <li>
          Gender:
          <% if @user.sex %>
            Male
          <% else %>
            Female
          <% end %>
        </li>
        <li>
          Birthday:
          <%= @user.birthday.day %>/
          <%= @user.birthday.month %>/
          <%= @user.birthday.year %>
        </li>
        <li>
          Address: <%= @user.address %>
        </li>
      </ul>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.entries.any? %>
      <h3>
        </a>Posts (<%= @user.entries.count %>)
      </h3>
      <ol class="entries">
        <%= render @entries %>
      </ol>
      <%= will_paginate @entries %>
    <% end %>
  </div>
</div>
